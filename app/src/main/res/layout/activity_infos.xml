<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfosActivity">

    <include
        layout="@layout/layout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <Button
                android:id="@+id/buttonStudent1"
                style="@style/StudentButton"
                android:text="@string/btn_text_student1" />

            <Button
                android:id="@+id/buttonStudent2"
                style="@style/StudentButton"
                android:text="@string/btn_text_student2" />

            <Button
                android:id="@+id/buttonStudent3"
                style="@style/StudentButton"
                android:text="@string/btn_text_student3" />
        </LinearLayout>


    </ScrollView>

</LinearLayout>