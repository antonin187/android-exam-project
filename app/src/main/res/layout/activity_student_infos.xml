<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentInfosActivity">

    <include
        layout="@layout/layout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageStudent"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/textStudentName"
                style="@style/StudentTextView" />

            <TextView
                android:id="@+id/textStudentEmail"
                style="@style/StudentTextView" />

            <TextView
                android:id="@+id/textStudentGroup"
                style="@style/StudentTextView" />

            <TextView
                android:id="@+id/textLink"
                android:text="@string/_link_text_student"
                android:textColor="@color/blue_link"
                style="@style/StudentTextView" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>